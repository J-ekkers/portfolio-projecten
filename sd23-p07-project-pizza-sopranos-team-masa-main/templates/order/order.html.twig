{% extends 'base.html.twig' %}

{% block title %}Order!{% endblock %}

{% block body %}
    <div class="container-fluid d-flex justify-content-center align-items-center flex-row flex-wrap col-5 border py-4 my-2 rounded">
        <table class="table table-dark table-striped rounded table-hover ">
            <thead>
            <tr>
                <th scope="col">#bon nummer</th>
                <th scope="col">customer naam</th>
                <th scope="col">adress</th>
                <th scope="col">customer-note</th>
                <th scope="col">Order Status</th>
                <th scope="col">Amount</th>
                <th scope="col">Pizza Length</th>
                <th scope="col">date/time</th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
            <tr>
                <th scope="row">{{ order.id }}</th>
                <td>{{ order.firstName }} {{ order.lastName }}</td>
                <td>{{ order.adress }}</td>
                <td>{{ order.customerNote }}</td>
                <td>{{ order.orderStatus }}</td>
                <td>€ {{ order.amount|number_format(2, '.', ',') }} €</td>
                <td>{{ order.pizzaLength }}</td>
                <td>{{ order.orderDate|date('Y-m-d H:i') }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
