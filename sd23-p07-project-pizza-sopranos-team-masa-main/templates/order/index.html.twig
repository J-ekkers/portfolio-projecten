{% extends 'base.html.twig' %}

{% block title %}Order Maken!{% endblock %}

{% block body %}
    <div class="container-fluid d-flex justify-content-center align-items-center flex-row flex-wrap col-5 border py-5 my-2 rounded">
        <div class="container-fluid col-lg-7 col-md-7 col-sm-12 align-self-stretch d-flex justify-content-start align-items-start flex-column">
            <h5>Uw pizza</h5>
            <div class="card mt-1" style="width: 19rem">
                <img src="{{ asset(pizza.img) }}"  alt="" class="img-fluid object-fit-contain rounded-top">
                <div class="card-body">
                    <h5 class="card-title">{{ pizza.name }}</h5>
                    <p class="card-text">{{ pizza.description }}</p>
                </div>
                <div class="card-body d-flex flex-row justify-content-between flex-wrap">
                    <p class="m-0 py-1 px-3 bg-black fw-bold text-danger rounded mt-1">â‚¬{{ pizza.price|number_format(2, ',', '.') }}</p>
                </div>
            </div>
        </div>
        <div class="container-fluid col-lg-5 col-md-5 col-sm-12 align-self-stretch">
            <h4>Fill in the necessary fields</h4>
            {{ form(form) }}
        </div>
    </div>
{% endblock %}
