{% extends 'base.html.twig' %}

{% block title %}Hello Master!{% endblock %}

{% block body %}
    <div class="container-sm col-lg-8 col-md-6 col-sm-7 my-2 d-flex justify-content-around align-items-start flex-column px-0">
        <a class="text-decoration-none text-white btn btn-info fw-bold text-start mt-2 ms-5" href="{{ path('category') }}">Go Back</a>
            <div class="container-fluid d-flex justify-content-center mt-3 align-items-start flex-row flex-wrap">
                {% for pizza in pizzas %}
                    <div class="card m-1 px-0 align-self-stretch" style="width:18rem">
                        <img class="card-img-top m-0" src="{{ asset(pizza.img) }}" alt="Card image" style="width:100%">
                        <div class="card-body">
                            <h4 class="card-title">{{ pizza.name }}</h4>
                            <p class="card-text ">{{ pizza.description }}</p>
                            <p class="btn btn-primary m-0">â‚¬{{ pizza.price | number_format(2, ',', '.') }}</p>
                            <a href="{{ path('app-order', {'id':pizza.id}) }}" class="btn bg-danger text-black fw-bold m-0">Bestellen  <i class="bi bi-caret-right-fill"></i></a>
                        </div>
                    </div>
                {% endfor %}
            </div>
    </div>
{% endblock %}